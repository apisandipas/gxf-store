<h1>Listing pages</h1>

<table>
  <thead>
    <th>Name</th>
    <th>Permalink</th>
    <th>Content</th>
   
    <th></th>
    <th></th>
  </thead>

<% @pages.each do |page| %>
  <tr>
    <td><%= page.name %></td>
    <td><%= page.permalink %></td>
    <td><%= page.content %></td>
    
    <td><%= link_to 'Edit', edit_admin_page_path(page) %></td>
    <td><%= link_to 'Destroy', admin_page_path(page), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

