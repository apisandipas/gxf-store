<section id="posts">
  <% @posts.each do |post| %>
    <% if post.published %>
    <article>
      <h2>
        <%= link_to post.title, post_path(post) %>
        <small> <%= post.created_at.strftime('%m.%d.%y') %> </small>
      </h2>
      <div>
        <%= post.body %>
      </div>
    </article>
    <% end %>
  <% end  %>
</section>